{
	"name": "cmake",
	"version": "0.0.4",
	"publisher": "twxs",
	"description": "CMake support for Visual Studio Code",
	"author": {
		"name": "Nicolas Martin"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/twxs/vs.language.cmake.git"
	},
	"license" : "MIT",
	"activationEvents": [
		"onLanguage:cmake"
	],
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "*",
		"opener": "*"		
	},
	"engines": {
		"vscode": "*"
	},
	"main": "./out/extension",
	"contributes": {
		"languages": [{
			"id": "cmake",
			"extensions": [ ".cmake"],
			"filenames": [ "CMakelists.txt" ],
			"aliases": [ "CMake" ]
		}],
		"commands": [{
            "command": "cmake.onlineHelp",
            "title": "CMake: Help"
        }]
	},
	"scripts": {
		"prepublish": "tsc"	,
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	}
}